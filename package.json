{
	"name": "c51-project-generator",
	"displayName": "C51 Project Generator",
	"description": "快速构建C51项目.",
	"publisher": "MoonAndHaze",
	"version": "0.0.95",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:CPG.createQuickC51",
		"*"
	],
	"icon": "image/icon.png",
	"main": "./src/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "C51 Project Generator",
			"properties": {
				"Keil C51.Installation Path":{
					"type":"string",
					"description": "Keil C51 安装路径",
					"scope": "resource",
					"default":"C:\\Keil_v5\\C51"
				}
			}
		},
		"commands": [
			{
				"command": "CPG.createQuickC51",
				"title": "%CPG.commands.createQuickC51.tiltle%"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"repository": {
        "type": "git",
        "url": "https://hub.fastgit.org/MoonAndHaze/Convenient-And-Fast.git"
    },
	"devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
		"mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }

}
